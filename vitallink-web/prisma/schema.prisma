generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  DONOR
  MEDICAL_PROFESSIONAL
  ADMIN
}

enum AccountStatus {
  UNVERIFIED
  VERIFIED
  SUSPENDED
}

enum DonorStatus {
  PENDING_VERIFICATION
  VERIFIED
  INACTIVE
  REJECTED
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  fullName     String?
  password     String
  role         Role          @default(DONOR)

  status       AccountStatus @default(UNVERIFIED)
  otp              String?       
  otpExpiresAt     DateTime?


  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  donorProfile DonorProfile?
  hospitalId   String?
  hospital     Hospital?     @relation(fields: [hospitalId], references: [id])
}

enum DonationType {
  ALIVE 
  AFTER_DEATH 
}

model DonorProfile {
  id             String      @id @default(cuid())
  bloodType      String?
  address        String?
  organsToDonate String?
  status         DonorStatus @default(PENDING_VERIFICATION)
  donationType   DonationType @default(AFTER_DEATH)
  
  userId         String      @unique
  user           User        @relation(fields: [userId], references: [id])
}


model Hospital {
  id        String   @id @default(cuid())
  name      String
  address   String?
  staff     User[]
  patients  Patient[]
}

model Patient {
  id             String   @id @default(cuid())
  fullName       String
  bloodType      String
  organNeeded    String
  medicalUrgency Int      
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  hospitalId     String
  hospital       Hospital @relation(fields: [hospitalId], references: [id])
}